<div class="container">
  <div class ="row">
          <div class="col s12">
          <h3>Welcome {{firstname}},</h3>
          </div>
  </div>

  <div class = "row">
          <div class = "col s5">
            <img src="http://placehold.it/300x300">
          </div>

          <div class = "col s7">
              <table>
                        <thead>
                            <tr>
                              <th data-field="firstname">First Name</th>
                              <th data-field="lastname">Last Name</th>
                              <th data-field="email">Email</th>
                            </tr>
                        </thead>
                  {{!-- table body --}}
                        <tbody>
                          <tr>
                            <td>{{firstname}}</td>
                            <td>{{lastname}}</td>
                            <td>{{email}}</td>
                          </tr>
                        </tbody>
              </table>
          </div>
    </div>

<div class = "row">
        <div class="col s6">
            <h5>These are your goals</h5>
            <div class ="row">
                  {{#each goals}}
                    <div class = "col s12">
                          {{!-- <img class="tooltipped imageicon responsive-img card-image" data-position="bottom" data-delay="30" data-tooltip="I am useful tool for you to accomplish this. I am useful tool for you to accomplish this.I am useful tool for you to accomplish this." src="{{this.imageURL}}">
                          </a> --}}


                          {{!-- <a class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="I am tooltip"> --}}
                            <img class="imageicon responsive-img card-image" src="{{this.imageURL}}">
                          {{!-- </a> --}}

                          <!-- Modal Trigger -->
                          <a class="waves-effect waves-light btn" href="#modal1">Modal</a>

                          <!-- Modal Structure -->
                            <div id="modal1" class="modal">
                                  <div class="modal-content">
                                    <h4>Modal Header</h4>
                                    <p>A bunch of text</p>
                                  </div>
                                  <div class="modal-footer">
                                    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
                                  </div>
                            </div>
                            {{!-- end of modal --}}
                    </div>
                  {{/each}}
            </div>
        </div>
        <div class = "col s6">
          <h5>These are your completed goals</h5>
        </div>
</div>




