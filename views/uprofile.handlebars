{{!-- conatiner to hold the user profile dashboard --}}
<div class="container z-depth-5">
  <div class ="row">
      <div class="col s12">
      <h3>Welcome {{firstname}},</h3>
      </div>
  </div>
{{!-- the dashboard holds a photo of the user --}}
  <div class = "row">
      <div class = "col s5">
        <img src="http://placehold.it/300x300">
      </div>
      <div class = "col s7">
          <table>
          <caption>{{firstname}}'s Dashboard</caption>
              <thead>
                  <tr>
                    <th data-field="firstname">First Name</th>
                    <th data-field="lastname">Last Name</th>
                    <th data-field="email">Email</th>
                  </tr>
              </thead>
        {{!-- table body --}}
              <tbody>
                <tr>
                  <td>{{firstname}}</td>
                  <td>{{lastname}}</td>
                  <td>{{email}}</td>
                </tr>
              </tbody>
          </table>
          </div>
    </div>
<div class = "row">
      <div class = "col s12">
        <table>
          <caption><h3>List of {{firstname}} {{lastname}}'s Goals</h3></caption>
          <thead>
            <tr>
              <th>Goals</th>
            </tr>
          </thead>
          <tbody>
            {{#each goals}}
            <tr>
              <td>{{this.goalname}}</td>
            </tr>
          </tbody>
        </table>
                  {{/each}}
      </div>
</div>

<div class = "row">
        <div class="col s6">
            <h5>Checkout different ways to achieve your goals {{firstname}}</h5>
            <div class ="row">
                  {{#each goals}}
                    <div class = "col s12">
<!-- Modal Trigger -->
                          <a href="#modal1">
                          <img class="imageicon responsive-img card-image" src="{{this.imageURL}}">
                          </a>
    
                         {{!-- <img class="tooltipped imageicon responsive-img card-image" data-position="bottom" data-delay="30" data-tooltip="I am useful tool for you to accomplish this. I am useful tool for you to accomplish this.I am useful tool for you to accomplish this." src="{{this.imageURL}}">
                          </a> --}}


                          {{!-- <a class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="I am tooltip"> --}}
                          {{!-- </a> --}}

                          <!-- Modal Structure -->
                            <div id="modal1" class="modal">
                                  <div class="modal-content">
                                    <h4>List of businesses nearby that might help you:</h4>
                                    <h6>Business A</h6>
                                        <p>Business A's address and other info</p>
                                    <h6>Business B</h6>
                                        <p>Business B's address and other info</p>
                                    <h6>Business C</h6>
                                        <p>Business C address and other info</p>
                                  </div>
                                  <div class="modal-footer">
                                    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Thanks!</a>
                                  </div>
                            </div>
                            {{!-- end of modal --}}
                    </div>
                  {{/each}}
            </div>
        </div>
        <div class = "col s6">
          <h5>Completed goals</h5>
        </div>
</div>
</div>




