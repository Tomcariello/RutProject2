{{!-- conatiner to hold the user profile dashboard --}}
<div class="container z-depth-5">
  {{!-- <div class = "container"> --}}
  <br>
      <div class ="row">
          <div class="col s12">
          <h3>Welcome back, {{firstname}}!</h3>
          </div>
      </div>
{{!-- the dashboard holds a photo of the user --}}
  <div class = "row">
      <div class = "col s5 l6">
        <img class="responsive-img" src="http://placehold.it/300x300">
      </div>
      <div class = "col s7 l6">
          <table>
          <caption>{{firstname}}'s Dashboard</caption>
              <thead>
                  <tr>
                    <th data-field="firstname">First Name</th>
                    <th data-field="lastname">Last Name</th>
                    <th data-field="email">Email</th>
                  </tr>
              </thead>
        {{!-- table body --}}
              <tbody>
                <tr>
                  <td>{{firstname}}</td>
                  <td>{{lastname}}</td>
                  <td>{{email}}</td>
                </tr>
              </tbody>
          </table>
          </div>
    </div>
    {{!-- </div> --}}
<div class = "row">
      <div class = "col s12 l12">
        <table>
          <caption><h3>List of {{firstname}} {{lastname}}'s Goals</h3></caption>
          <thead>
            <tr>
              <th>Goals</th>
              <th>Click on Image for Suggestion</th>
            </tr>
          </thead>
          <tbody>
            {{#each goals}}
            <tr>
              <td><h6>{{this.goalname}}</h6></td>
              <td><a href="#modal1"><img style="width: 150px; height:150px;" class="imageicon responsive-img" src="{{this.imageURL}}"><button id="closeButton">X Remove</button></a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
              
      </div>
</div>
