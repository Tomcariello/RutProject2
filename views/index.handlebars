<h1>Burgers!</h1>

<div class ="row">
  <div class="col-xs-6">

  <h2>Burger Up!</h2>

    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devour" value="true">
              <button type="submit">EAT ME!</button>
            </form>

          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-xs-6">
    <h2>Burgers eaten...order another?</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


<div class ="row">
  <div class="col-xs-12">
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="newBurger">Burger Name:</label>
        <input type="text" id="newBurger" name="newBurgerName">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
