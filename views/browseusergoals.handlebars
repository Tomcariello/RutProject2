<div class='row'>
  <div class="col s9">
    <h4>Click on any activity below to add it to your list!</h4>

    <hr>

    <div class='row'>

      {{#each goals}}
      <div class="col s4">
        <a href="../add-user-goal/2/{{this.id}}">
          <div id={{this.id}} class='card'>
            <div class="goalcard">
              <img class="imageicon" src="{{this.imageURL}}">
            </div>
            <div class="goaltitle">
              {{this.goalname}}
            </div>
          </div>
        </a>
      </div>
      {{/each}}


    </div>
  </div>

  <div class="col s3">
    <div class="sidebar">
      <a href="uprofile">
        <button class="waves-effect waves-light btn">Go to profile</button>
      </a>

      {{!-- <form class="create-update-form" action="browse" method="POST"> --}}
      <div class="form-group">
        <input type="text" id="filterResult" name="filterResultString">
      </div>
      <p><button class="waves-effect waves-light btn">Add Filter</button></p>

      <a class="modal-trigger" href="#modal1">
        <button class="waves-effect waves-light btn" id="addGoalButton">Add Goal</button>
      </a>

    </div>
  </div>
</div> 


<div id="modal1" class="modal">
  <div class="modal-content">
    <h4>Add a new goal</h4>
    <p>This goal will be added to your profile and visible to all users.</p>
  </div>


  <div class="form-group">
    <form action="/create-goal" method="POST">
      Goalname:<input type="text" name="addGoalName"></input>
      Image:<input type="text" name="addGoalURL"></input>
      <input type="hidden" name="userID" value=2></input>
  </div>

  <div class="modal-footer">
    <button id="Submit" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</button>
    </form>
  </div>
</div>

